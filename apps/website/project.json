{
    "root": "apps/website",
    "targets": {
      "test": {
        "executor": "@nx/jest:jest",
        "options": {}
      },
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/website",
          "command": "astro check && dotenv -- astro build"
        },
        "configurations":{ 
          "staging":{
            "command": "astro check && tsc --noEmit && dotenv -e ../../.env.staging -- astro build"
          },
          "production":{
            "command": "astro check && tsc --noEmit && dotenv -e ../../.env.production -- astro build"
          }
        }
      },
      "deploy": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/website",
          "command":"dotenv -- vercel deploy --prebuilt"
        }
      },
      "dev": {
        "executor": "nx:run-commands",
        "inputs": ["{projectRoot}/**/*"],
        "options": {
          "cwd": "apps/website",
          "command":"astro dev",
          "envFile": "{workspaceRoot}/.env"
        }
      },
      "ngrok": {
        "executor": "nx:run-commands",
        "inputs": ["{projectRoot}/**/*"],
        "options": {
          "cwd": "apps/website",
          "command":"ngrok http --domain=newtrend.ngrok.io 3000 --authtoken ${NGROK_AUTHTOKEN}",
          "envFile": "{workspaceRoot}/.env"
        }
      },
      "preview": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/website",
          "commands":[
            "astro preview"
          ]
        }
      }
    }
  }   
  